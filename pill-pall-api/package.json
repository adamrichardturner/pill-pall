{
    "name": "pill-pall-api",
    "version": "1.0.0",
    "description": "API for Pill Pall application",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "type-check": "tsc --noEmit",
        "check-all": "npm run type-check && npm run lint && npm run format:check",
        "db:migrate": "npm run build && node dist/database/migrate.js",
        "db:seed": "npm run build && node dist/database/seed.js",
        "db:setup": "npm run db:migrate && npm run db:seed",
        "docker:build": "docker build -t pill-pall-api .",
        "docker:build:prod": "docker build -t pill-pall-api:prod --target production .",
        "docker:run": "docker run -p 3001:3001 pill-pall-api",
        "docker:run:prod": "docker run -p 3001:3001 pill-pall-api:prod",
        "docker:dev": "docker-compose up --build",
        "docker:dev:down": "docker-compose down -v",
        "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
        "docker:prod:down": "docker-compose -f docker-compose.prod.yml down -v",
        "docker:logs": "docker-compose logs -f pill-pall-api",
        "docker:db:logs": "docker-compose logs -f postgres"
    },
    "keywords": [
        "express",
        "typescript",
        "api",
        "pill-pall"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.12.0",
        "pg-pool": "^3.6.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.19.0",
        "@types/pg": "^8.11.10",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}