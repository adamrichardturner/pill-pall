# Application Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=*

# Database Configuration (for application)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pill_pall_dev
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# PostgreSQL Container Configuration (for Docker)
POSTGRES_DB=pill_pall_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Production External Port (to avoid conflicts)
POSTGRES_EXTERNAL_PORT=5433

# Production Configuration Examples:
# NODE_ENV=production
# CORS_ORIGIN=https://pillpall.app
# DB_NAME=pill_pall_prod
# DB_PASSWORD=your_super_secure_production_password
# POSTGRES_DB=pill_pall_prod
# POSTGRES_PASSWORD=your_super_secure_production_password
# DB_MAX_CONNECTIONS=20

# Production Database Password (for docker-compose.prod.yml)
# DB_PASSWORD=your_production_password_here

# Production CORS (set to your app domain)
# CORS_ORIGIN=https://pillpall.app 